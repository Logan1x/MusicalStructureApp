<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicalstructureapp.SongIntent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/small_thumbnail"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_60"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_toEndOf="@id/small_thumbnail"
            android:layout_toRightOf="@id/small_thumbnail"
            android:orientation="vertical"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_18"
                android:textStyle="bold"
                tools:text="song name" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="artist name" />
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_34"
            android:layout_marginRight="@dimen/dimen_34"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button"
            android:background="@drawable/ic_queue_music_black_24dp"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_35"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:backgroundTint="@color/colorPrimary" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/song_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:scaleType="centerCrop"
        tools:background="@drawable/aviciiwakemeup" />

    <Button
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimen_17"
        android:layout_marginEnd="@dimen/dimen_17"
        android:layout_marginRight="@dimen/dimen_17"
        android:background="@drawable/ic_shuffle_black_24dp"
        android:backgroundTint="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignBaseline="@+id/play_button"
            android:layout_alignBottom="@+id/play_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginStart="@dimen/dimen_30"
            android:background="@drawable/ic_thumb_up_black_24dp"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/button5"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignBaseline="@+id/play_button"
            android:layout_alignBottom="@+id/play_button"
            android:layout_marginEnd="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_toLeftOf="@+id/play_button"
            android:layout_toStartOf="@+id/play_button"
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_play_circle_filled_black_24dp"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignBaseline="@+id/play_button"
            android:layout_alignBottom="@+id/play_button"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_toEndOf="@+id/play_button"
            android:layout_toRightOf="@+id/play_button"
            android:background="@drawable/ic_skip_next_black_24dp"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/button6"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignBaseline="@+id/play_button"
            android:layout_alignBottom="@+id/play_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:background="@drawable/ic_thumb_down_black_24dp"
            android:backgroundTint="@color/colorPrimary" />
    </RelativeLayout>
</RelativeLayout>
