<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lst_album_id"
    android:layout_width="@dimen/dimen_160"
    android:layout_height="@dimen/dimen_190"
    android:layout_margin="@dimen/dimen_10"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="@dimen/dimen_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/album_img_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_160"
            android:background="#2d2d"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/album_title_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_13"
            tools:text="Album" />

    </LinearLayout>

</android.support.v7.widget.CardView>